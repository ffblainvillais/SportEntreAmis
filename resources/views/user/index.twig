{% extends 'layout/layout' %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h2>Bonjour {{ auth_user().name }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel panel-heading"> Information établissement </div>
                    <div class="panel-body">
                        {% if not userEstablishment %}
                            <div class="centered">
                                <p>Vous n'avez pas encore défini votre établissement</p>
                                <a href="{{ url('user/create-establishment') }}"><button class="btn btn-primary">Créer mon établissement</button></a>
                            </div>
                        {% else %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}